<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductCashiers">

    <FrameLayout
        android:id="@+id/Frame1"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="20dp"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="182dp">


        <ImageView
            android:id="@+id/Logo"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:layout_marginTop="480dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="1dp" />

    </FrameLayout>

    <Button
        android:id="@+id/btnAddProducts"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:background="@color/black"
        android:layout_below="@id/productCategory"
        android:text="Add product"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAddProducts"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="50dp"
        android:background="@color/black"
        android:text="Cancel"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/productID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        android:inputType="number"
        android:text="Enter Product ID"/>

    <EditText
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productID"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:inputType="text"
        android:text="Enter Product Name"/>

    <EditText
        android:id="@+id/productCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/productName"
        android:ems="10"
        android:inputType="number"
        android:text="Enter Product Category" />

</RelativeLayout>