<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".queueCashiers">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="30dp"
        android:background="#D3D3D3"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="182dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:layout_marginTop="470dp"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="1dp">
        </ImageView>

        <TextView
            android:id="@+id/QueueText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="25dp"
            android:text="Queue"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="italic" />

    </FrameLayout>

    <Button
        android:id="@+id/customersQueueButton"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:background="@color/black"
        android:text="customers Queue"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/customersOrderButton"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customersQueueButton"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:text="customers Order"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/advanceOrderButton"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/customersOrderButton"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:text="Advance Order"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/successfulOrderButton"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/advanceOrderButton"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:text="Successful Order"
        android:textColor="@color/white"
        />

</RelativeLayout>